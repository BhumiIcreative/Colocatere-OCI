<odoo>
    <!-- Modified the form view by inheriting and extending the "account.move" model -->
    <record model="ir.ui.view" id="account_move_form">
        <field name="name">Account anomaly</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="fiscal_position_id" position="after">
                <field name="anomaly" invisible="move_type not in ['out_invoice', 'in_invoice']"/>
            </field>
        </field>
    </record>

<!-- Modified the customer invoice tree view by inheriting and extending the "account.move" model -->
    <record model="ir.ui.view" id="account_move_tree_out_tree">
        <field name="name">Account anomaly</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_out_invoice_tree"/>
        <field name="arch" type="xml">
            <field name="amount_total_signed" position="after">
                <field name="anomaly"/>
            </field>
        </field>
    </record>

    <!-- Modified the vendor bills tree view by inheriting and extending the "account.move" model -->
    <record model="ir.ui.view" id="account_move_in_tree">
        <field name="name">Account anomaly</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_in_invoice_bill_tree"/>
        <field name="arch" type="xml">
            <field name="amount_total_signed" position="after">
                <field name="anomaly"/>
            </field>
        </field>
    </record>

    <!-- Modified the search filter view by inheriting and extending the "account.move" model. -->
    <record model="ir.ui.view" id="account_move_search">
        <field name="name">Account anomaly</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_account_invoice_filter"/>
        <field name="arch" type="xml">
            <filter name="late" position="after">
                <filter name="in_anomaly" string="Anomaly" domain="[('anomaly', '=', True)]"/>
            </filter>
        </field>
    </record>
</odoo>
