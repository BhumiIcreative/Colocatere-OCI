<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="sale_order_form" model="ir.ui.view">
            <field name="name">Sale order form</field>
            <field name="model">sale.order</field>
            <field name="inherit_id" ref="sale.view_order_form"/>
            <field name="arch" type="xml">
                <button name="action_quotation_send" position="before">
                    <button name="mark_quote_to_send" class="btn-primary" string="Mark as to send" type="object"
                            invisible="state != 'submitted'"/>
                    <button name="mark_submitted_at_manager" class="btn-primary" string="Submit to manager"
                            type="object" invisible="state != 'draft'"/>
                </button>
                <button name="action_quotation_send" position="attributes">
                    <attribute name="invisible">state != 'to_send'</attribute>
                </button>
                <button name="action_cancel" position="attributes">
                    <attribute name="invisible">state not in ('draft','submitted','to_send','sent','sale')</attribute>
                </button>
                <xpath expr="//button[@name='action_confirm'][2]" position="attributes">
                    <attribute name="invisible">state != 'sent'</attribute>
                    <attribute name="class">btn-primary</attribute>
                </xpath>
                <xpath expr="//button[@name='action_confirm'][1]" position="replace">
                </xpath>
                <field name="state" position="attributes">
                    <attribute name="statusbar_visible">draft,to_send,submitted,sent,sale</attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>
