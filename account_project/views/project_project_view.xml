<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inherit project form view for add account_move_count -->
    <record id="property_project_form" model="ir.ui.view">
        <field name="name">Accoutn project form</field>
        <field name="model">project.project</field>
        <field name="inherit_id" ref="project.edit_project"/>
        <field name="arch" type="xml">
            <xpath expr="//button[@name='action_view_tasks']" position="before">
                <button name="action_view_invoices"
                        type="object"
                        class="oe_stat_button"
                        icon="fa-pencil-square-o">
                    <field name="account_move_count" widget="statinfo" string="Invoices"/>
                </button>
            </xpath>
        </field>
    </record>
</odoo>
