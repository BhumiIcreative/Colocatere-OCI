<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="property_account_move_filter" model="ir.ui.view">
            <field name="name">Property account move filter</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_account_invoice_filter"/>
            <field name="arch" type="xml">
                <field name="name" position="after">
                    <field name="lease_partner_ids"/>
                </field>
                <filter name="duedate" position="after">
                    <filter string="In deficit" name="in_deficit" domain="[('in_deficit', '=', True)]"/>
                </filter>
            </field>
        </record>

        <record id="property_account_move_form" model="ir.ui.view">
            <field name="name">Property account move form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account.view_move_form"/>
            <field name="arch" type="xml">
                <button name="button_draft" position="attributes">
                    <attribute name="invisible">restrict_mode_hash_table == True or state not in ('to_post', 'posted',
                        'cancel')
                    </attribute>
                </button>
                <field name="partner_id" position="attributes">
                    <attribute name="invisible">move_type in ['entry']
                    </attribute>
                    <attribute name="readonly">state not in ['draft', 'to_post']
                    </attribute>
                </field>
                <field name="invoice_line_ids" position="attributes">
                    <attribute name="readonly">state not in ['draft', 'to_post']
                    </attribute>
                </field>
                <field name="line_ids" position="attributes">
                    <attribute name="readonly">state not in ['draft', 'to_post']
                    </attribute>
                </field>
                <field name="invoice_user_id" position="after">
                    <field name="additional_invoice_payment_ref"/>
                </field>
                <field name="partner_bank_id" position="attributes">
                    <attribute name="readonly">state not in ['draft', 'to_post']</attribute>
                </field>
                <field name="state" position="replace">
                    <field name="state" widget="statusbar" statusbar_visible="draft,to_post,posted"/>
                </field>
                <button name="action_post" position="replace">
                    <button name="action_to_post" string="To post" class="oe_highlight" type="object"
                            groups="account.group_account_invoice" invisible="state != 'draft'"/>
                    <button name="action_post" string="Post" class="oe_highlight" type="object"
                            groups="account.group_account_invoice" invisible="state != 'to_post'"/>
                </button>
            </field>
        </record>
        <record id="property_account_move_form_project" model="ir.ui.view">
            <field name="name">Property project account move form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="account_project.project_account_move_form"/>
            <field name="arch" type="xml">
                <field name="project_id" position="after">
                    <field name="purchase_contract_id" options="{'no_create': True}" domain="[
                          ('project_id', '=', project_id),
                        ]" invisible="not project_id and company_id != 1"/>
                    <field name="lease_id" options="{'no_create': True}" domain="[
                                  ('project_ids', '=', project_id),
                                ]" invisible="not project_id and company_id != 2"/>/>
                    <field name="lease_partner_ids" widget="many2many_tags" invisible="not lease_id and
                                  company_id != 2"/>
                </field>
            </field>
        </record>
        <record id="property_account_move_timeline_form" model="ir.ui.view">
            <field name="name">Property account move timeline form</field>
            <field name="model">account.move</field>
            <field name="inherit_id" ref="invoice_timeline.account_move_form"/>
            <field name="arch" type="xml">
                <field name="account_timeline_template_id" position="attributes">
                    <attribute name="invisible">company_id != 1
                    </attribute>
                </field>
            </field>
        </record>
    </data>
</odoo>
