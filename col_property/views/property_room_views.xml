<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_room_form" model="ir.ui.view">
        <field name="name">Property form</field>
        <field name="model">property.room</field>
        <field name="type">form</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_lease"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-pencil-square-o">
                            <field name="lease_count" widget="statinfo" string="Leases"/>
                        </button>
                    </div>
                    <div class="oe_title">
                        <h1>
                            <field name="name" default_focus="1" placeholder="Name"/>
                        </h1>
                    </div>
                    <group>
                        <field name="akawam_id"/>
                        <field name="property_id" options="{'no_create': True}"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_room_tree" model="ir.ui.view">
        <field name="name">Property tree</field>
        <field name="model">property.room</field>
        <field name="type">tree</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="akawam_id"/>
                <field name="lease_ids"/>
            </tree>
        </field>
    </record>


    <record id="property_property_action_2" model="ir.actions.act_window">
        <field name="name">rooms</field>
        <field name="res_model">property.room</field>
        <field name="view_mode">tree,form</field>
    </record>


     <menuitem
            id="property_menu_sab"
            name="Rooms"
            parent="col_property.property_menu"
            action="property_property_action_2"
            sequence="2"
    />
</odoo>
