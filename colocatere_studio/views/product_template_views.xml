<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inheriting the existing form view for product.template -->
    <record id="view_order_form_inherit_product" model="ir.ui.view">
        <field name="name">product.template.form.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="product.product_template_only_form_view"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='options']" position="after">
                <group name="group_2GX8z">
                    <group name="group_2GX8z_left">
                        <field name="is_used_by_akawam"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>

    <record id="view_order_tree_inherit_product" model="ir.ui.view">
        <field name="name">product.template.tree.inherit</field>
        <field name="model">product.template</field>
        <field name="inherit_id" ref="account.product_template_view_tree"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='default_code']" position="after">
                <field name="is_used_by_akawam" optional="show"/>
            </xpath>
        </field>
    </record>
</odoo>