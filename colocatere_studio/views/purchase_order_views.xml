<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inheriting the existing form view for purchase.order -->
    <record id="view_order_form_inherit_purchase" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//page[@name='purchase_delivery_invoice']//group[2]" position="after">
                <group name="studio_group_lcKcl">
                    <group name="studio_group_lcKcl_left" string="Edition PDF">
                        <field name="marque_finvest_immo" string="Marque FINVEST IMMO"/>
                    </group>
                </group>
            </xpath>
        </field>
    </record>
    <!-- Inheriting the existing tree view for purchase.order -->
    <record id="purchase_order_view_tree_inherit" model="ir.ui.view">
        <field name="name">purchase.order.view.tree.inherit</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_kpis_tree"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="is_projet_active" string="Is Projet active" widget="boolean_toggle" optional="show"/>
            </field>
            <field name="date_approve" position="after">
                <field name="tag_ids" widget="many2many_tags"/>
            </field>
        </field>
    </record>
</odoo>