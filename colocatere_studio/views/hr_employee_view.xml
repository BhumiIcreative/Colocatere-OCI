<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Inheriting the existing form view for hr.employee -->
    <record id="colocatere_studio_inherit_view_employee_form" model="ir.ui.view">
        <field name="name">hr.employee.form.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook/page[3][@name='hr_settings']/group[@name='active_group']/field[@name='user_id']" position="after">
                <field name="partenaire_id" readonly="user_partner_id != False"/>
            </xpath>
        </field>
    </record>
</odoo>