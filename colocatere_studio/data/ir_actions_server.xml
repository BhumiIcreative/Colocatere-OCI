<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Server action : notif màj akawam-->
        <record id="notif_maj_akawam_server_action" model="ir.actions.server">
            <field name="name">notif màj akawam</field>
            <field name="model_id" ref="mail.model_mail_thread"/>
            <field name="binding_model_id" eval="False"/>
            <field name="binding_view_types">list,form</field>
            <field name="state">mail_post</field>
            <field name="sequence">5</field>
            <field name="binding_type">action</field>
            <field name="child_ids" eval="[(6, 0, [])]"/>
        </record>

        <!--Update data from UI side: evaluation_type:equation,update_field_id:partner_bank_id,value:FR76 1627 5000 1108 0004 9745 301-->
        <record id="invoice_compte_banca_server_action" model="ir.actions.server">
            <field name="name">Invoice : Compte bancaire par défaut [OCI]</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" eval="False"/>
            <field name="binding_view_types">list,form</field>
            <field name="state">object_write</field>
            <field name="sequence">5</field>
            <field name="binding_type">action</field>
            <field name="child_ids" eval="[(6, 0, [])]"/>
            <field name="evaluation_type" eval="False"/>
            <field name="update_field_id" eval="False"/>
            <field name="value" eval="False"/>
        </record>
        <record id="update_sdd_mandat_on_server_action" model="ir.actions.server">
            <field name="name">update sdd mandat on unpaid invoice</field>
            <field name="model_id" ref="account_sepa_direct_debit.model_sdd_mandate"/>
            <field name="binding_model_id" eval="False"/>
            <field name="binding_view_types">list,form</field>
            <field name="state">code</field>
            <field name="state">object_write</field>
            <field name="sequence">5</field>
            <field name="binding_type">action</field>
            <field name="child_ids" eval="[(6, 0, [])]"/>
            <field name="code">for record in records :
                record.partner_id.unpaid_invoices._compute_sdd_mandate_ids()
            </field>
        </record>
        <!--Update data from UI side: evaluation_type:equation,update_field_id:partner_bank_id,value:FR76 1350 7001 0031 5852 0218 914-->
        <record id="invoice_compte_banca_pno_server_action" model="ir.actions.server">
            <field name="name">Invoice : Compte bancaire : PNO</field>
            <field name="model_id" ref="account.model_account_move"/>
            <field name="binding_model_id" eval="False"/>
            <field name="binding_view_types">list,form</field>
            <field name="state">object_write</field>
            <field name="sequence">5</field>
            <field name="binding_type">action</field>
            <field name="child_ids" eval="[(6, 0, [])]"/>
            <field name="evaluation_type" eval="False"/>
            <field name="update_field_id" eval="False"/>
            <field name="value" eval="False"/>
        </record>
    </data>
</odoo>
