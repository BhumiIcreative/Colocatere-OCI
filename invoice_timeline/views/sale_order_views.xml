<?xml version="1.0" encoding="utf-8"?>
<odoo>
      <!-- Define a new or modified view for the sale.order model -->
    <record id="view_sale_order_timeline_cgv_form" model="ir.ui.view">
        <field name="name">view.sale.order.timeline.cgv.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='note']" position="after">
                <br/>
                <h3>CGV</h3>
                <br/>
                 <!-- Add a new field 'oci_cgv' -->
                <field colspan="4" name="oci_cgv" nolabel="1"/>
            </xpath>
        </field>
    </record>
</odoo>
