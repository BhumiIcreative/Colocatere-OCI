<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Form view of payment import -->
    <record id="view_payment_import" model="ir.ui.view">
        <field name="name">Payment import</field>
        <field name="model">payment.import</field>
        <field name="arch" type="xml">
            <form string="Payment import">
                <group string="Your company">
                    <field name="company_id" readonly="1"/>
                    <field name="account_move_journal_id"/>
                    <field name="journal_id"/>
                </group>
                <group string="Payment import">
                    <field name="file" filename="filename" widget="binary"/>
                    <field name="filename" invisible="1"/>
                    <field name="show_group" invisible="1"/>
                </group>
                <group string="Payment line">
                    <field name="line_ids" readonly="0" nolabel="1" colspan="2">
                        <tree editable="bottom" create="false">
                            <field name="group" readonly="1" column_invisible="not parent.show_group"/>
                            <field name="date" readonly="0"/>
                            <field name="account_code" readonly="0"/>
                            <field name="partner_id"/>
                            <field name="libelle" readonly="0"/>
                            <field name="debit" readonly="0"/>
                            <field name="credit" readonly="0"/>
                            <field name="currency_id" groups="base.group_no_one"/>
                        </tree>
                    </field>
                </group>
                <footer>
                    <button name="run_and_open" type="object" string="Confirm and open payments"
                            context="{'payments': True}" class="oe_highlight"/>
                    <button name="run_and_open" type="object" string="Confirm and open accounting entries"
                            context="{'moves': True}" class="oe_highlight"/>
                    <button string="Cancel" class="btn-default" special="cancel"/>
                </footer>
            </form>
        </field>
    </record>
    <!-- Action for payment import -->
    <record id="payment_import_action_window" model="ir.actions.act_window">
        <field name="name">Payment import</field>
        <field name="res_model">payment.import</field>
        <field name="view_mode">form</field>
        <field name="view_id" ref="view_payment_import"/>
        <field name="target">new</field>
    </record>

    <!-- si jamais on est juste dans le module facturation et pas dans le module comptabilitÃ© de la version entreprise -->
    <!-- parent="account.menu_finance" -->
    <menuitem
            id="payment_import_wizard"
            name="Payment import"
            parent="account_accountant.menu_accounting"
            sequence="30"
            action="payment_import_action_window"/>
</odoo>
